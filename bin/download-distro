#!/bin/bash

# Exit on failure
set -e

# ARGS

VERSION="${1}"

# CONSTANTS

FILENAME="${VERSION}-server-cloudimg-amd64.img"
URL="https://cloud-images.ubuntu.com/${VERSION}/current/${FILENAME}"

# VALIDATE

if [ "${VERSION}" = "" ]; then
  echo "❗  Invalid VERSION: ${VERSION}" >&2
  exit 1
fi

# START

curl -O --output-dir "/srv/artifacts/" ${URL}
