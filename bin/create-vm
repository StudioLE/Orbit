#!/bin/bash
set -euo pipefail

# IMPORTS

source /srv/lib/boot-disk/create-boot-disk.sh

# ARGS

OS_NAME="ubuntu"
OS_VERSION="jammy"
DISK_SIZE="20G"

TYPE="c1"
MEMORY="8"
CORES="4"
PURPOSE="worker"

# START

/srv/lib/vm/create-vm.sh \
  --os-name "${OS_NAME}" \
  --os-version "${OS_VERSION}" \
  --disk-size "${DISK_SIZE}" \
  --type "${TYPE}" \
  --memory "${MEMORY}" \
  --cores "${CORES}" \
  --purpose "${PURPOSE}"
